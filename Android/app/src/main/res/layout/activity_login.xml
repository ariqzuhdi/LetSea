<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LetSea"
    android:orientation="vertical"
    android:background="@color/blue_main"
    tools:context=".Auth.LoginActivity">


    <ImageView
        android:id="@+id/login_ship"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ship"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/letsea"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginBottom="440dp"
        android:fontFamily="@font/displayreguler"
        android:text="@string/letsea"
        android:textColor="@color/grey_font"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_ship"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/login_radar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="148dp"
        android:src="@drawable/radar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/letsea"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377" />

    <EditText
        android:id="@+id/username"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/outline_person_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/ptreguler"
        android:hint="@string/username"
        android:paddingLeft="10dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letsea"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:id="@+id/btn_login_to_home"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginBottom="152dp"
        android:backgroundTint="@color/blue_secondary"
        android:fontFamily="@font/ptreguler"
        android:text="@string/login_button"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

