<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LetSea"
    android:background="@color/blue_main"
    tools:context=".RegisterShipActivity">


    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/outline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/displayreguler"
        android:text="@string/register_ship"
        android:textColor="@color/grey_font"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/mmsi"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/ptreguler"
        android:hint="MMSI"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_title"
        app:layout_constraintVertical_bias="0.566" />

    <EditText
        android:id="@+id/imo"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="440dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/ptreguler"
        android:hint="IMO"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mmsi"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/name"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="376dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/ptreguler"
        android:hint="NAME"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imo"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/builder"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="312dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/ptreguler"
        android:hint="BUILDER"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/place"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/ptreguler"
        android:hint="PLACE OF BUILD"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/builder"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/year"
        android:layout_width="305dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/ptreguler"
        android:hint="YEAR BUILD"
        android:paddingLeft="20dp"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_register_ship"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="@color/blue_secondary"
        android:fontFamily="@font/ptreguler"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>