<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LetSea"
    android:background="@color/blue_main"
    tools:context=".Detail.DetailShipActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/outline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/vessel_detail"
        android:layout_width="173dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/displayreguler"
        android:text="@string/vessel_detail"
        android:textColor="@color/grey_font"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="591dp"
        android:layout_marginTop="29dp"
        android:background="#1A2C5B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/ship_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/background_ship_logo"
            android:src="@drawable/ship"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptreguler"
            android:gravity="center_horizontal"
            android:text="NAME"
            android:textColor="@color/yellow_name"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ship_logo"
            app:layout_constraintVertical_bias="0.04" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/ptreguler"
            android:text="@string/mmsi"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mmsi"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="MMSI"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/ptreguler"
            android:text="@string/imo"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/tv_imo"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="IMO"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mmsi" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/ptreguler"
            android:text="@string/name"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="NAME"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_imo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/ptreguler"
            android:text="@string/builder"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/tv_builder"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="BUILDER"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/ptreguler"
            android:text="@string/place_of_build"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/tv_place_of_build"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="PLACE OF BUILD"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_builder" />

        <TextView
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/ptreguler"
            android:text="@string/year_build"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_year_build"
            android:layout_width="121dp"
            android:layout_height="19dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/ptreguler"
            android:text="YEAR BUILD"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_place_of_build" />

        <Button
            android:id="@+id/btn_track_detail"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="356dp"
            android:backgroundTint="@color/blue_secondary"
            android:fontFamily="@font/ptreguler"
            android:text="@string/track_detail"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_tittle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>